<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Users Data</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>
<body>
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid container">
            <a class="navbar-brand" href="#">Homework 10</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/movies">Movies</a>
                    </li>
                    <!-- <li class="nav-item">
                        <a class="nav-link" href="/users">Users</a>
                    </li> -->
                    <li class="nav-item">
                        <a class="nav-link" href="/upload">Upload</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container mt-3">
        <h1>Halaman Movies</h1><hr>

        <% if (typeof successMessage !== 'undefined') { %>
            <div class="alert alert-primary container" role="alert">
                <%= successMessage %>
            </div>
        <% } %>
            
        <div>
            <div style="overflow-x: auto;">
                <table border="1" cellspacing="0" cellpadding="10" class="table table-responsive">
                    <thead>
                        <tr>
                            <th scope="col">title</th>
                            <th scope="col">genres</th>
                            <th scope="col">year</th>
                            <th scope="col">photo</th>
                            <th scope="col">CreatedAt</th>
                            <th scope="col">UpdateddAt</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% data.forEach(user => { %>
                            <tr>
                                <td scope="row">
                                    <%= user.title %>
                                </td>
                                <td>
                                    <%= user.genres %>
                                </td>
                                <td>
                                    <%= user.year %>
                                </td>
                                <td>
                                    <%= user.photo %>
                                </td>
                                <td>
                                    <%= user.createdAt %>
                                </td>
                                <td>
                                    <%= user.updatedAt %>
                                </td>
                            </tr>
                            <% }) %>
                        </tbody>
                    </ul>
                </table>
            </div>
        </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</body>
</html>